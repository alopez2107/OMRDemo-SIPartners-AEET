<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:padding="10dp"    >    <ImageView        android:id="@+id/icon"        android:layout_width="48dp"        android:layout_height="48dp"        android:background="@drawable/console_bg"        android:padding="7dp"        android:src="@drawable/ic_blood"        android:layout_centerVertical="true"        />    <ImageView        android:id="@+id/icon_led"        android:layout_width="29dp"        android:layout_height="29dp"        android:padding="4dp"        android:background="@drawable/led_bg"        android:src="@drawable/led_animation"        android:layout_centerVertical="true"        android:layout_alignParentRight="true"        />    <TextView        android:id="@+id/title"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_toRightOf="@+id/icon"        android:layout_toLeftOf="@+id/icon_led"        android:textSize="18sp"        android:paddingLeft="10dp"        android:paddingRight="10dp"        android:gravity="center_vertical"        android:textColor="#333333"        android:textStyle="bold"        android:text="Title"        android:layout_alignParentTop="true"        />    <TextView        android:id="@+id/subtitle_reading"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_toRightOf="@+id/icon"        android:layout_toLeftOf="@+id/icon_led"        android:textSize="16sp"        android:paddingLeft="10dp"        android:paddingRight="6dp"        android:gravity="center_vertical"        android:textColor="#666666"        android:textStyle="bold"        android:layout_below="@+id/title"        android:text="Subtitle - reading"        android:visibility="visible"        />    <TextView        android:id="@+id/subtitle_time"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_toRightOf="@+id/icon"        android:textSize="16sp"        android:paddingLeft="10dp"        android:paddingRight="10dp"        android:gravity="center_vertical"        android:textColor="#666666"        android:layout_below="@+id/subtitle_reading"        android:text="Subtitle - time"        />    <TextView        android:id="@+id/status_line"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_toRightOf="@+id/icon"        android:textSize="12sp"        android:paddingLeft="10dp"        android:paddingRight="10dp"        android:gravity="center_vertical"        android:textColor="#666666"        android:layout_below="@+id/subtitle_time"        android:text="Status"        /></RelativeLayout>